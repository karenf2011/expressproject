<% for (let book of books) { %>
    <% if (book.frontPage) { %>
        <div class="col-xl-2 col-md-4 col-sm-6">
            <a href="/<%= book._id %>">
                <div class="card">
                    <img src="<%= book.frontPage %>" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= book.title %>
                        </h5>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= book.author %>
                            </small>
                        </p>
                    </div>
                </div>
            </a>
        </div>
<% }} %>
            
<div class="col-4">
    <h2>New Books</h2>
    <ul>
    <% for (let book of books) { %>
        <% if(!book.frontPage) { %>
            <li>
                <a href="/<%= book._id %>">
                    <%= book.title %>
                    <small class="text-muted">
                    - by <%= book.author %>
                    </small>
                </a>
            </li>
        <% }} %>
    </ul>
</div>