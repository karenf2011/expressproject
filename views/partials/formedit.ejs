<h1>Change Book Details</h1>
<form action="/<%= book._id %>?_method=PATCH" method="POST">
    <div class="form-group">
        <label for="title">Title: </label>
        <input type="text" name="title" id="title" placeholder="Book title" value="<%= book.title %>" required>
    </div>
    <div class="form-group">
        <label for="author">Author:</label>
        <input type="text" name="author" id="author" placeholder="Author" value="<%= book.author %>" required>
    </div>
    <div class="form-group">
        <select name="category" id="" required>
            <% for (let category of categories) { %>
                <option value="<%= category %>" <%=book.category===category ? 'selected' :'' %> >
                    <%= category %>
                </option>
            <% } %>
        </select>
    </div>
    <div class="form-group">
        <label for="goodreadsRating">Goodreads Rating (0-5):</label><br>
        <input type="range" name="goodreadsRating" id="goodreadsRating" min="0" max="5" step="0.1" value="<%= book.goodreadsRating %>">
    </div>
    <div class="form-group">
        <label for="publicationYear">Publication Year:</label>
        <input type="number" name="publicationYear" id="publicationYear" min="1950" max="2021" value="<%= book.publicationYear %>">
    </div>
    <div class="form-group">
        <label for="numberPages">Number of Pages:</label>
        <input type="number" name="numberPages" id="numberPages" min="100" max="5000" value="<%= book.numberPages %>">
    </div>
    <button>Change Details</button>
</form>